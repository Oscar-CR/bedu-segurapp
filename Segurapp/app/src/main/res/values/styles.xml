<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="loginEdiText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:background">@drawable/et_rounded</item>
        <item name="android:padding">@dimen/size_16</item>
    </style>

    <style name="loginTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:layout_marginTop">@dimen/size_8</item>
        <item name="android:layout_marginBottom">@dimen/size_8</item>

    </style>

    <style name="buttomPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_64</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:foreground">@drawable/bt_foreground</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonSecondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_64</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="login_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">148dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">@dimen/size_64</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:layout_marginBottom">-35dp</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_48</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">Roboto</item>
    </style>

    <style name="forgotPasswordTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
    </style>

    <style name="forgotPasswordEdiText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:paddingStart">@dimen/size_16</item>
    </style>

</resources>