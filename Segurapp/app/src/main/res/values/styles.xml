<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="loginEdiText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:background">@drawable/et_rounded</item>
        <item name="android:padding">@dimen/size_16</item>
    </style>

    <style name="loginTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:layout_marginTop">@dimen/size_8</item>
        <item name="android:layout_marginBottom">@dimen/size_8</item>

    </style>

    <style name="buttomPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_64</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:foreground">@drawable/bt_foreground</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonSecondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_64</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="login_img">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">148dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">@dimen/size_64</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:layout_marginBottom">-35dp</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_48</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">Roboto</item>
    </style>

    <style name="forgotPasswordTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
    </style>

    <style name="forgotPasswordEdiText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:paddingStart">@dimen/size_16</item>
    </style>


    <!-- Get Started Splash Fragment !-->

    <style name="getStartedSplashLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="getStartedSplashLottieAnimationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_256</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="getStartedSplashTextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/size_16</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/segurapp_black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="getStartedSplashTextViewDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_16</item>
        <item name="android:layout_marginBottom">@dimen/size_24</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/segurapp_black_variant</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="getStartedSplashButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_rounded</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/btn_continue_title</item>
    </style>

    <!-- Get Started Safe Contacts Fragment !-->

    <style name="getStartedSafeContactsLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/size_48</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="getStartedSafeContactsButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_64</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_32</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">@drawable/bt_contacts_foreground</item>
        <item name="android:drawableEnd">@drawable/ic_account</item>
        <item name="android:text">@string/search_safe_contact</item>
    </style>

    <style name="getStartedChipContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/size_32</item>
    </style>

    <!-- Get Started Activity !-->
    <style name="get_started_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_72</item>
        <item name="android:drawableTint">@color/segurapp_black</item>
        <item name="android:drawableEnd">@drawable/ic_edit</item>
        <item name="android:drawablePadding">@dimen/size_16</item>
        <item name="android:layout_marginBottom">@dimen/size_32</item>
    </style>

    <style name="loginUserAnimation">
        <item name="android:layout_width">@dimen/size_256</item>
        <item name="android:layout_height">@dimen/size_256</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/size_32</item>
    </style>

</resources>